{
	"name": "Python 3",
	"image": "dengmingcong/dev-python:3.10",
	"features": {},
	"customizations": {
		"vscode": {
			"extensions": [
				"njpwerner.autodocstring",
				"streetsidesoftware.code-spell-checker",
				"vivaxy.vscode-conventional-commits",
				"gnramsay.create-python-module",
				"tamasfe.even-better-toml",
				"eamodio.gitlens",
				"ms-python.isort",
				"ZainChen.json",
				"eriklynd.json-tools",
				"nickmillerdev.pytest-fixtures",
				"donjayamanne.python-environment-manager",
				"charliermarsh.ruff",
				"wenfangdu.snippet-generator"
			],
			"settings": {
				"python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
				"python.testing.pytestArgs": [
					"tests",
					"examples",
					"--debugtalk-py-file=${workspaceFolder}/examples/debugtalk.py",
					"--clean-alluredir",
					"--alluredir=/mnt/nfs/allure-docker/projects/deng/results",
					"--capture=no"
				]
			}
		}
	},
	"postCreateCommand": "poetry config virtualenvs.in-project true && poetry install && poetry run pre-commit install && poetry run pre-commit install --hook-type commit-msg",
	"mounts": [
		"source=${localEnv:HOME}/nfs,target=/mnt/nfs,type=bind,consistency=cached"
	]
}
